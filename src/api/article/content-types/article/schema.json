{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Real estate articles, blog posts, and insights"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "enabled": false
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 500
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "News",
        "Buying",
        "Selling",
        "Trends",
        "Engineering",
        "Sustainability"
      ],
      "required": true
    },
    "tags": {
      "type": "json",
      "required": false
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": false
    },
    "publishedAt": {
      "type": "datetime",
      "required": false
    },
    "viewCount": {
      "type": "integer",
      "default": 0,
      "required": false
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "relatedArticles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article"
    },
    "readingTime": {
      "type": "integer",
      "required": false
    },
    "analytics": {
      "type": "component",
      "repeatable": false,
      "component": "shared.analytics"
    },
    "socialShares": {
      "type": "json",
      "required": false,
      "default": {
        "facebook": 0,
        "twitter": 0,
        "linkedin": 0,
        "whatsapp": 0,
        "email": 0,
        "total": 0
      }
    }
  }
}

