{
  "collectionName": "components_shared_seos",
  "info": {
    "displayName": "SEO",
    "description": "SEO metadata for articles"
  },
  "options": {},
  "attributes": {
    "metaTitle": {
      "type": "string",
      "maxLength": 60
    },
    "metaDescription": {
      "type": "text",
      "maxLength": 160
    },
    "keywords": {
      "type": "string"
    },
    "ogImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "ogTitle": {
      "type": "string",
      "maxLength": 60
    },
    "ogDescription": {
      "type": "text",
      "maxLength": 200
    },
    "ogType": {
      "type": "enumeration",
      "enum": ["article", "website"],
      "default": "article"
    },
    "twitterCard": {
      "type": "enumeration",
      "enum": ["summary", "summary_large_image"],
      "default": "summary_large_image"
    },
    "twitterTitle": {
      "type": "string",
      "maxLength": 70
    },
    "twitterDescription": {
      "type": "text",
      "maxLength": 200
    },
    "twitterImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    }
  }
}

